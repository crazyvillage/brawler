<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Desktop.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Build a historic brawl deck using the top cards from EDHREC"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to village brawler"
                FontSize="18"
                HorizontalOptions="Center" />
            
            <SearchBar
                Placeholder="Enter a commander"
                HorizontalOptions="Center"/>
            
            <Label
                Text="Search for a commander to begin"
                HorizontalOptions="Center"/>

            <Button
                x:Name="CopyBtn"
                Text="Copy"
                SemanticProperties.Hint="Copy to the clipboard"
                Clicked="OnCopyClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
